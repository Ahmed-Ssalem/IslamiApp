<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="12dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/hadith_name_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/item_quraan_name_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />
    <TextView
        android:id="@+id/hadith_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/hadith_name_background"
        app:layout_constraintEnd_toEndOf="@id/hadith_name_background"
        app:layout_constraintStart_toStartOf="@id/hadith_name_background"
        app:layout_constraintBottom_toBottomOf="@id/hadith_name_background"
        tools:text="ูก"
        android:textColor="@color/brown"
        android:textStyle="bold"
        android:textSize="30sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>