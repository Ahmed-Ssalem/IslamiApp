<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="16dp"
    android:layout_marginEnd="24dp"
    android:layout_marginStart="24dp">

    <TextView
        android:id="@+id/radio_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Radio Channel"
        android:layout_marginTop="16dp"
        android:textSize="30sp"
        android:textColor="@color/white"

        />

    <ImageView
        android:id="@+id/play_ic"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/radio_title"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/play_ic"
        android:layout_marginTop="16dp"
        android:layout_marginStart="70dp" />

    <ImageView
        android:id="@+id/stop_ic"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/radio_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/stop_ic"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="70dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/stop_ic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:layout_margin="24dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>